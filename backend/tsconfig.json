{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": [
            "ESNext"
        ],
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "./**/*.ts",
        "types/types.d.ts" // Adjust this path based on the actual location of types.d.ts
    ],
    "exclude": [
        "node_modules"
    ]
}