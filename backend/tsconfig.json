{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "server.ts",
        "routes/**/*.ts",
        "models/**/*.ts",
        "middleware/**/*.ts",
        "config/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}